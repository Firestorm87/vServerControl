<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.tobiaskahl.vservercontrol"
    android:versionCode="7"
    android:versionName="1.0.6">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:debuggable="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/vServer_Control"
        android:theme="@style/AppTheme">
        <activity
            android:name="de.tobiaskahl.vservercontrol.activities.LoginActivity"
            android:label="@string/vServer_Control"
            android:windowSoftInputMode="adjustResize|stateVisible">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.tobiaskahl.vservercontrol.activities.AccountUebersichtActivity"
            android:label="@string/vServer_Control"></activity>
        <activity
            android:name="de.tobiaskahl.vservercontrol.activities.ServerActivity"
            android:label="@string/vServer_Control"
            android:parentActivityName=".activities.AccountUebersichtActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".AccountUebersichtActivity" />
        </activity>
    </application>

</manifest>
