<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    android:isScrollContainer="true">


    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <GridLayout
            android:id="@+id/server_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:padding="16dp"
            android:textIsSelectable="true"
            android:visibility="gone"
            android:columnOrderPreserved="false"
            android:useDefaultMargins="true"
            android:rowCount="9"
            android:clickable="false"
            android:rowOrderPreserved="false"
            android:layout_gravity="center_horizontal|top"
            android:focusable="false"
            android:alpha="0"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/serverNameLabel"
                android:layout_column="0"
                android:layout_gravity="left"
                android:layout_row="0"
                android:text="Servername:" />

            <TextView
                android:id="@+id/serverNameText"
                android:layout_column="1"
                android:layout_gravity="left"
                android:layout_row="0"
                android:text="v1234567891234567" />

            <TextView
                android:id="@+id/serverNickLabel"
                android:layout_column="0"
                android:layout_gravity="left"
                android:layout_row="1"
                android:text="ServerNickname:" />

            <TextView
                android:id="@+id/serverNickText"
                android:layout_column="1"
                android:layout_gravity="left"
                android:layout_row="1"
                android:text="Server 1" />

            <TextView
                android:id="@+id/serverStateLabel"
                android:layout_column="0"
                android:layout_gravity="left"
                android:layout_row="2"
                android:text="Server-Status:" />

            <TextView
                android:id="@+id/serverStateText"
                android:layout_column="1"
                android:layout_gravity="left"
                android:layout_row="2"
                android:text="Online/Offline" />

            <TextView
                android:id="@+id/serverTrafficMonthLabel"
                android:layout_column="0"
                android:layout_gravity="left"
                android:layout_row="3"
                android:text="Traffic (Monat):" />

            <TextView
                android:id="@+id/serverTrafficMonthText"
                android:layout_column="1"
                android:layout_gravity="left"
                android:layout_row="3"
                android:text="20 GB" />

            <TextView
                android:id="@+id/serverTrafficDayLabel"
                android:layout_column="0"
                android:layout_gravity="left"
                android:layout_row="4"
                android:text="Traffic Tag:" />

            <TextView
                android:id="@+id/serverTrafficDayText"
                android:layout_column="1"
                android:layout_gravity="left"
                android:layout_row="4"
                android:text="20 GB" />

            <TextView
                android:id="@+id/serverIpsLabel"
                android:layout_column="0"
                android:layout_gravity="left"
                android:layout_row="5"
                android:text="IP-Adressen:" />

            <TextView
                android:id="@+id/serverIpsText"
                android:layout_column="1"
                android:layout_gravity="left"
                android:layout_row="5"
                android:text="123:123:123:123\n122:122:122:122" />

            <Button
                android:id="@+id/action_start"
                android:layout_column="0"
                android:layout_gravity="left"
                android:layout_row="6"
                android:text="Start"
                android:minWidth="100dp" />

            <Button
                android:id="@+id/action_restart"
                android:layout_column="0"
                android:layout_gravity="left"
                android:layout_row="7"
                android:text="Restart"
                android:minWidth="100dp" />

            <Button
                android:id="@+id/action_stop"
                android:layout_column="1"
                android:layout_gravity="left"
                android:layout_row="7"
                android:text="Stop"
                android:minWidth="100dp" />

            <Button
                android:id="@+id/action_reset"
                android:layout_column="0"
                android:layout_gravity="left"
                android:layout_row="8"
                android:text="Reset"
                android:minWidth="100dp" />

            <Button
                android:id="@+id/action_poweroff"
                android:layout_column="1"
                android:layout_gravity="left"
                android:layout_row="8"
                android:text="PowerOff"
                android:minWidth="100dp" />
        </GridLayout>

        <LinearLayout
            android:id="@+id/lade_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical"
            android:visibility="visible"
            android:layout_gravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/lade_status_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif-light"
                android:text="@string/lade_progress_loading"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>